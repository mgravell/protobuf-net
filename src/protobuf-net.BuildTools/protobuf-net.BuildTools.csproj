<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>ProtoBuf.BuildTools</RootNamespace>
    <AssemblyName>protobuf-net.BuildTools</AssemblyName>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoWarn>$(NoWarn);RS2007;NU5128</NoWarn>
    <Description>Analyzer and Generator support for protobuf-net</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- build time deps -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="3.8.0" Pack="false" PrivateAssets="all" />
    
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <!-- note: package ref here (rather than project ref) so we can ship BuildTools without shipping everything -->
    <PackageReference Include="protobuf-net.Reflection" Version="3.0.72" PrivateAssets="all" GeneratePathProperty="true" />
    <PackageReference Include="protobuf-net.Core" Version="3.0.72" PrivateAssets="all" GeneratePathProperty="true" />
    <None Include="$(PKGprotobuf-net_Reflection)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PKGprotobuf-net_Core)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="AnalyzerReleases.Shipped.md" />
    <None Remove="AnalyzerReleases.Unshipped.md" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="AnalyzerReleases.Shipped.md" />
    <AdditionalFiles Include="AnalyzerReleases.Unshipped.md" />
  </ItemGroup>

  <ItemGroup>
    <CompilerVisibleProperty Include="ProtoBufNet_DebugLog" />
    <CompilerVisibleProperty Include="ProtoBufNet_GenerateServices" />
    <CompilerVisibleProperty Include="ProtoBufNet_UseOneOf" />
  </ItemGroup>

</Project>
